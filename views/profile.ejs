<link rel="stylesheet" href="/css/style.css">

<div class="profile-container">
  <div class="container">
    <div class="profile-header">
      <a href="/dashboard" class="back-btn">‚Üê Voltar</a>
      <h1>Seu Perfil</h1>
      <p>Acompanhe seu progresso e conquistas</p>
    </div>

    <!-- Estat√≠sticas -->
    <div class="stats-grid fade-in-up">
      <div class="stat-card">
        <div class="stat-icon">üìä</div>
        <p class="stat-label">Rotinas Completadas</p>
        <p class="stat-value"><%= stats.totalCount %></p>
      </div>

      <div class="stat-card">
        <div class="stat-icon">üî•</div>
        <p class="stat-label">Dias Consecutivos</p>
        <p class="stat-value"><%= stats.consecutiveDays %></p>
      </div>

      <div class="stat-card">
        <div class="stat-icon">üìà</div>
        <p class="stat-label">Taxa de Conclus√£o</p>
        <p class="stat-value"><%= Math.round(stats.completionRate) %>%</p>
      </div>

      <div class="stat-card">
        <div class="stat-icon">üèÜ</div>
        <p class="stat-label">Conquistas</p>
        <p class="stat-value"><%= unlockedAchievements.length %></p>
      </div>
    </div>

    <!-- Detalhes -->
    <div class="details-section fade-in-up" style="animation-delay: 100ms;">
      <h2>Detalhes</h2>
      <div class="details-grid">
        <div class="detail-card">
          <p class="detail-label">Manh√£</p>
          <p class="detail-value"><%= stats.morningCount %></p>
        </div>
        <div class="detail-card">
          <p class="detail-label">Noite</p>
          <p class="detail-value"><%= stats.nightCount %></p>
        </div>
        <div class="detail-card">
          <p class="detail-label">Dias Perfeitos</p>
          <p class="detail-value"><%= stats.perfectDayCount %></p>
        </div>
      </div>
    </div>

    <!-- Hist√≥rico -->
    <div class="history-section fade-in-up" style="animation-delay: 200ms;">
      <h2>Hist√≥rico Completo</h2>
      <div class="history-list">
        <% if (history && history.length > 0) { %>
          <% history.sort((a, b) => new Date(b.date) - new Date(a.date)).forEach(entry => { %>
            <div class="history-item">
              <span class="history-icon">
                <% if (entry.completedMorning && entry.completedNight) { %>
                  ‚ú®
                <% } else if (entry.completedMorning) { %>
                  ‚òÄÔ∏è
                <% } else if (entry.completedNight) { %>
                  üåô
                <% } else { %>
                  ‚≠ï
                <% } %>
              </span>
              <div class="history-content">
                <p class="history-date"><%= new Date(entry.date).toLocaleDateString('pt-BR', { weekday: 'long', day: 'numeric', month: 'long' }) %></p>
                <p class="history-status">
                  <% if (entry.completedMorning && entry.completedNight) { %>
                    Manh√£ e Noite
                  <% } else if (entry.completedMorning) { %>
                    Apenas Manh√£
                  <% } else if (entry.completedNight) { %>
                    Apenas Noite
                  <% } else { %>
                    N√£o conclu√≠da
                  <% } %>
                </p>
              </div>
              <% if (entry.completedMorning && entry.completedNight) { %>
                <span class="history-badge">Perfeito!</span>
              <% } %>
            </div>
          <% }); %>
        <% } else { %>
          <p class="no-history">Nenhum hist√≥rico ainda. Comece sua rotina!</p>
        <% } %>
      </div>
    </div>

    <!-- Conquistas -->
    <div class="achievements-section fade-in-up" style="animation-delay: 300ms;">
      <h2>üèÜ Conquistas</h2>

      <% if (unlockedAchievements && unlockedAchievements.length > 0) { %>
        <div class="achievements-subsection">
          <h3>Desbloqueadas (<%= unlockedAchievements.length %>)</h3>
          <div class="achievements-grid">
            <% unlockedAchievements.forEach(achievement => { %>
              <div class="achievement-card unlocked">
                <div class="achievement-icon"><%= achievement.icon %></div>
                <h4><%= achievement.name %></h4>
                <p><%= achievement.description %></p>
                <span class="rarity <%= achievement.rarity %>"><%= achievement.rarity.toUpperCase() %></span>
              </div>
            <% }); %>
          </div>
        </div>
      <% } %>

      <% if (allAchievements.length > unlockedAchievements.length) { %>
        <div class="achievements-subsection">
          <h3>Pr√≥ximas Conquistas (<%= allAchievements.length - unlockedAchievements.length %>)</h3>
          <div class="achievements-grid">
            <% allAchievements.filter(a => !unlockedAchievements.find(ua => ua.id === a.id)).forEach(achievement => { %>
              <div class="achievement-card locked">
                <div class="achievement-icon"><%= achievement.icon %></div>
                <h4><%= achievement.name %></h4>
                <p><%= achievement.description %></p>
                <span class="rarity <%= achievement.rarity %>"><%= achievement.rarity.toUpperCase() %></span>
              </div>
            <% }); %>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

